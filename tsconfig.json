{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src-widget",
    "src-widget/services",
    "shared/enums.ts",
    "shared/types.ts",
    "shared/utils/getGridTemplateAreas.ts",
    "shared/utils/getGridAutoRows.ts",
    "shared/utils/getGridAutoColumns.ts",
    "shared/translation",
    "shared/i18n"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}